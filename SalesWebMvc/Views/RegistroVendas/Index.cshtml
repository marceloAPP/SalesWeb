
@{
    ViewData["Title"] = "Registro de Vendas";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaSimples">
            <fieldset>
                <legend>Consulta Simples</legend>
                <div class="form-group">
                    <label for="DataInicio" class="col-lg-2 control-label">Data Início</label>
                    <div class="col-lg-10">
                        <input type="date" name="DataInicio" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="DataFim" class="col-lg-2 control-label">Data Fim</label>
                    <div class="col-lg-10">
                        <input type="date" name="DataFim" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn-primary">Enviar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaEmGrupo">
            <fieldset>
                <legend>Consulta em Grupo</legend>
                <div class="form-group">
                    <label for="DataInicio" class="col-lg-2 control-label">Data Início</label>
                    <div class="col-lg-10">
                        <input type="date" name="DataInicio" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="DataFim" class="col-lg-2 control-label">Data Fim</label>
                    <div class="col-lg-10">
                        <input type="date" name="DataFim" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn-primary">Enviar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>



